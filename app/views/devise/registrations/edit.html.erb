
<div class="d-flex" id="wrapper">
<%= render 'shared/navbar'%>

 
<div class="p-4 col-md-6">
		    <div class="card">
		        <div class="card-body">
		            <div class="row">
		                <div class="col-md-9">
		                    <h4>Edit Profile</h4>
		                    <hr>
		                </div>
		            </div>
		            <div class="row-md-5">
		                <div class="col-md-8">
		                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                            <%= render "devise/shared/error_messages", resource: resource %>

                            <div class="form-group">
                                  <div class="input-group">
                                    <span class="input-group-addon"></span>
                                      <%= f.text_field :first_name,
                                      class: "form-control", 
                                      placeholder: "First Name",
                                      id: "First Name",
                                      required: false %>
                                  </div>    
                            </div>    

                                      
                            <div class="form-group">
                              <div class="input-group">
                                <span class="input-group-addon"></span> 
                                <%= f.text_field :last_name,
                                class: 'form-control', 
                                placeholder: "Last Name",
                                required: false %>
                              </div>
                            </div>

                            <div class="form-group">
                                <div class="input-group">
                                  <span class="input-group-addon"></span>  
                                    <%= f.email_field :email, autofocus: true, autocomplete: "email",
                                    class: 'form-control', 
                                    placeholder: "Email Address",
                                    required: false %>
                                </div>
                              </div>  

                            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                            <% end %>

                            <div class="form-group">
                              <div class="input-group">
                                <span class="input-group-addon"></span>
                              <%= f.password_field :current_password, class: 'form-control', 
                                placeholder: "Current Password",
                                required: false%>
                              </div>
                            </div>

                            <div class="form-group">
                                <div class="input-group">
                                  <span class="input-group-addon"></span>
                                  <%= f.password_field :password, 
                                  class: 'form-control', 
                                  placeholder: "New Password",
                                  required: false %>
                                </div>
                              </div>  

                            <div class="form-group">
                              <div class="input-group">
                                <span class="input-group-addon"></i></span>
                                <%= f.password_field :password_confirmation, 
                                class: 'form-control', 
                                placeholder: "Confirm New Password",
                                required: false%>
                              </div>
                            </div>


                            <%= f.submit "Update Account", class:"btn btn-primary btn-block btn-md" %>
                          <% end %>
                          <hr>
                          <br>
                          <h3>Facebook Settings</h3>
                          <% if resource.has_facebook_linked? %>
                            <%= button_to "Unlink Facebook", authentication_path(resource), method: :delete, class:"btn btn-danger btn-block btn-md col-md-6" %>
                          <% else %>
                            <%= link_to omniauth_authorize_path(:user, :facebook), class:'btn btn-social btn-facebook btn-md' do %>
                              <i class="fa fa-facebook"></i> | Link Facebook Account
                              <% end %>
                              <br>
                          <% end %>
                          <br>
                          <h4>Delete Account</h4>

                          <p>Unhappy? <%= button_to "Delete My Account", registration_path(resource_name), data: { confirm: "Are you sure? \nThis will permanently delete your account and all properties. \nThis action cannot be undone." }, method: :delete, class:"btn btn-danger btn-block btn-md col-md-6" %></p>
                          </div>
                        </div>
                    </div>