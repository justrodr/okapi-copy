<body>
<div class="container">
    <div class="row">
      <div class="col-lg-10 col-xl-9 mx-auto">
        <div class="card card-signin flex-row my-5 animated fadeInUp">
          <div class="card-img-left d-none d-md-flex">
             <!-- Background image for card set in CSS! -->
          </div>
          <div class="card-body">
            <h5 class="card-title text-center">Change your password</h5>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
				<div class="input-group">
					<span class="input-group-addon"><i class="fa fa-lock"></i></span>
				<%= f.password_field :password, 
						class: 'form-control',
						placeholder: "New Password (6 characters minimum)",
						required:"required"%> 
				</div>
				</div>

  <div class="form-group">
                <div class="input-group">
                  <span class="input-group-addon"><i class="fa fa-lock"></i><i class="fa fa-check"></i></span>
                  <%= f.password_field :password_confirmation, 
                  class: 'form-control', 
                  placeholder: "Confirm New Password",
                  required: true%>
                </div>
              </div>

  <%= f.submit "Change my password", class:"btn btn-primary btn-block btn-lg" %>
<% end %>

<%= render "devise/shared/links" %>
